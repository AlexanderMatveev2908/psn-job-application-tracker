<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- ? my editor use Red Hat to format code so -->
    <!-- ? I do not see reason to make spawn hundreds of warnings for external plugins style -->

    <property name="severity" value="error"/>

    <module name="TreeWalker">

        <module name="IllegalImport"/> <!-- ! imports with something.*  -->
        <module name="UnusedImports"/> <!-- ! unused imports -->
        <module name="DeclarationOrder"/> <!-- ! fields before methods -->
        <module name="MissingSwitchDefault"/> <!-- ! force default in switch -->
        <module name="EqualsHashCode"/> <!-- ! if equals is overridden, hashCode must be too -->
        <module name="EmptyBlock"/> <!-- ! catch {} or if {} without logic -->
        <module name="CyclomaticComplexity">
            <property name="max" value="15"/>
        </module>
        <module name="MethodLength">
            <property name="max" value="80"/>
        </module>
    </module>
</module>